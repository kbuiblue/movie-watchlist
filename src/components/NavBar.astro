---
interface Props {
    title: string;
    highlight: string;
    href: string;
    hrefLabel: string;
}

const { title, highlight, href, hrefLabel } = Astro.props;
---

<nav class="nav-bar">
    <div class="nav">
        <h1 class="heading">
            {title}<span class="text-gradient">{highlight}</span>
        </h1>
        <a href={href}><h2 class="href-label">{hrefLabel}</h2></a>
    </div>
</nav>

<style>
    .nav-bar {
        position: relative;
        background: url("/movie-banner.png");
        display: flex;
        min-height: 29vh;
        max-height: 30vh;
        align-self: flex-start;
        align-items: center;
        width: 70vw;
        background-repeat: no-repeat;
        background-size: cover;
        user-select: none;
    }

    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 90%;
        min-height: 200px;
        max-height: 10em;
        margin: 0 auto;
        margin-bottom: 1em;
        color: #ffffff;
    }

    .nav .heading {
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        line-height: 0.8;
        margin: 0;
    }

    .nav .href-label {
        font-size: 1.1rem;
        cursor: pointer;
        user-select: none;
        margin: 0;
    }

    .nav .href-label:active {
        color: rgb(var(--accent-light));
    }

    .nav a {
        color: #fff;
    }

    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
